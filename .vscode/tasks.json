{
    // See https://go.microsoft.com/fwlink/?LinkId=733558
    // for the documentation about the tasks.json format
    "version": "2.0.0",
    "tasks": [
        {
            "label": "compile QRC for Windows",
            "type": "shell",
            "command": ". ${workspaceFolder}\\.venv\\Scripts\\Activate.ps1; pyside6-rcc.exe .\\resources\\resources.qrc -o rc.py"
        },
        {
            "label": "compile QRC for Linux",
            "type": "shell",
            "command": ". ${workspaceFolder}/.venv/bin/activate; pyside6-rcc ./resources/resources.qrc -o rc.py"
        }
    ]
}