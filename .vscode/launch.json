    "version": "0.2.0",
    "configurations": [
        {
            "name": "Launch App",
            "type": "python",
            "request": "launch",
            "console": "integratedTerminal",
            "justMyCode": true,
            "windows": {
                "preLaunchTask": "compile QRC for Windows",
                "program": "${workspaceFolder}\\main.py",
            },
            "linux": {
                "preLaunchTask": "compile QRC for Linux",
                "program": "${workspaceFolder}/main.py"
            },
            "env": {
                "PYTHONPATH": "${workspaceFolder}${pathSeparator}${env:PYTHONPATH}"
            }
        }
    ]
}